{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": false,
    "paths": {
      "@src/*": ["./src/*"],
      "@root": ["src/app.js"],
      "@router/*": ["src/router/"],
      "@middleware/*": ["src/middleware/"],
      "@utils/*": ["src/utils"],
      "@database/*": ["./src/database"]
    }
  },
  "exclude": ["node_modules"]
}
